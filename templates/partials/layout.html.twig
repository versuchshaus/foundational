{% set item_col = show_sidebar ? 'small-12 medium-9' : 'small-12' %}
{% set sidebar_col = show_sidebar ? 'small-12 medium-3' : 'small-12' %}

<div class="grid-x grid-margin-x">
    <div id="item" class="cell {{ item_col }}">
        {% block item %}{% endblock %}
    </div>
    {% if show_sidebar %}
    <div id="sidebar" class="cell {{ sidebar_col }}">
        {% block sidebar %}{% endblock %}
    </div>
    {% endif %}
</div>

