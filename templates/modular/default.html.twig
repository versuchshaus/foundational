<!-- Modular default template -->
<div class="grid-x grid-margin-x">
	<div class="cell small-12">
		<div class="content">
			<h2 class="sg-title">{{ page.title }}</h2>
	    {% set image = page.media.images|first %}
	    {% if image %}
	        {{ image.cropResize(960,960).html() }}
	    {% endif %}
		{{ content }}
		</div>
	</div>
</div>